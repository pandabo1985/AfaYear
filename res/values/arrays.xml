<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Twidere">
        <attr name="cardListBackgroundColor" format="color" />
        <attr name="cardItemBackground" format="reference" />
        <attr name="cardItemBackgroundColor" format="color" />
        <attr name="cardItemMessageIncomingBackground" format="reference" />
        <attr name="cardItemMessageOutgoingBackground" format="reference" />
        <attr name="cardItemMessageProfileImageIncomingBackground" format="reference" />
        <attr name="cardItemMessageProfileImageOutgoingBackground" format="reference" />
        <attr name="listMenuOverflowButton" format="reference" />
        <attr name="contentBackground" format="reference|color" />
        <attr name="ignorePadding" format="boolean" />
        <attr name="linePageIndicatorStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="TabPagerIndicator">
        <attr name="tabItemStyle" format="reference" />
        <attr name="tabItemContentStyle" format="reference" />
        <attr name="tabItemTextStyle" format="reference" />
    </declare-styleable>
    
    <!-- Default fade types. -->
	<attr name="fadeType">

		<!-- Fade is disabled. -->
		<enum name="none" value="0"/>
		<!-- Fade applies to actions container. -->
		<enum name="left" value="1"/>
		<!-- Fade applies to content container. -->
		<enum name="right" value="2"/>
		<!-- Fade applies to every container. -->
		<enum name="both" value="3"/>
	</attr>
    
    <declare-styleable name="SlidingPaneView">

		<!-- Spacing value. -->
		<attr name="spacingRight" format="dimension"/>
		<!-- Spacing value for actions container. -->
		<attr name="spacingLeft" format="dimension"/>
		<!-- Actions layout ID to link at view creation time. -->
		<attr name="layoutLeft" format="reference"/>
		<!-- Content layout ID to link at view creation time. -->
		<attr name="layoutRight" format="reference"/>
		<!-- Drawable to be used to draw shadow dropped by content view to actions one. -->
		<attr name="shadowDrawable" format="reference"/>
		<!-- Shadow width. -->
		<attr name="shadowWidth" format="dimension"/>
		<attr name="shadowSlidable" format="boolean"/>
		<!-- Fade type. -->
		<attr name="fadeType"/>
		<!-- Max fade value. -->
		<attr name="fadeMax" format="integer"/>
		<!-- Indicates how long flinging will take time in milliseconds. -->
		<attr name="flingDuration" format="integer"/>
	</declare-styleable>

</resources>